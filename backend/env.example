# Gmail API Configuration
GMAIL_CLIENT_ID=your_gmail_client_id
GMAIL_CLIENT_SECRET=your_gmail_client_secret
GMAIL_REFRESH_TOKEN=your_gmail_refresh_token

# Server Configuration
PORT=3101
NODE_ENV=development
# Comma-separated list of allowed origins for CORS
CORS_ORIGINS=http://localhost:3100
# Rate limiting (requests per 15 minutes window)
RATE_LIMIT_MAX=300

# Database Configuration (MongoDB)
# If running with docker-compose, this is set via compose. For local dev, use:
# MONGODB_URI=mongodb://admin:password123@localhost:3102/real-estate-email-processor?authSource=admin

# JWT Configuration
# Generate a strong secret for production, e.g., `openssl rand -hex 64`
JWT_SECRET=your_jwt_secret
# Token lifetime (e.g., '30d', '12h')
JWT_EXPIRE=30d